@PACKAGE_INIT@

# EngineConfig.cmake
# Config file for the Engine package
# Provides imported targets for linking against the engine

include(CMakeFindDependencyMacro)

# Find required dependencies
find_dependency(EnTT CONFIG REQUIRED)
find_dependency(glm CONFIG REQUIRED)
find_dependency(nlohmann_json CONFIG REQUIRED)

# Include the exported targets
include("${CMAKE_CURRENT_LIST_DIR}/EngineTargets.cmake")

# Include helper macros for game plugins
include("${CMAKE_CURRENT_LIST_DIR}/EngineGamePlugin.cmake")

# Set variables for user convenience
set(ENGINE_VERSION @PROJECT_VERSION@)
set(ENGINE_VERSION_MAJOR @PROJECT_VERSION_MAJOR@)
set(ENGINE_VERSION_MINOR @PROJECT_VERSION_MINOR@)
set(ENGINE_VERSION_PATCH @PROJECT_VERSION_PATCH@)

# Engine version number for ABI compatibility (major << 16 | minor << 8 | patch)
math(EXPR ENGINE_VERSION_NUMBER "(@PROJECT_VERSION_MAJOR@ << 16) + (@PROJECT_VERSION_MINOR@ << 8) + @PROJECT_VERSION_PATCH@")

# Path to template project
set(ENGINE_TEMPLATE_DIR "@PACKAGE_CMAKE_INSTALL_DATADIR@/engine/templates/game_template")

# Provide aliased target for convenience
if(NOT TARGET Engine::Engine)
    add_library(Engine::Engine ALIAS engine)
endif()

check_required_components(Engine)
